@using Microsoft.AspNetCore.Identity
@inject SignInManager<Storyteller> SignInManager
@inject UserManager<Storyteller> UserManager

<link rel="stylesheet" href="../css/MainStyles.css">

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <div class="nav-container">
        <a class="nav-container--ref" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
    <div class="nav-container">
        <a class="nav-container--ref" asp-area="Identity" asp-page="/Account/Register">Registration</a>
    </div>
}
